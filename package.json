{
  "name": "ts-rest-api",
  "packageManager": "yarn@4.2.2",
  "scripts": {
    "test": "jest",
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "lint": "eslint ."
  },
  "main": "./dist/server.js",
  "types": "./dist/server.d.ts",
  "files": [
    "dist"
  ],
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    }
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "slugify": "^1.6.6",
    "supabase": ">=1.8.1",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1",
    "@types/cors": "^2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.5.5",
    "@types/pg": "^8.11.6",
    "cors": "^2.8.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.2.3",
    "typescript": "5.4.5"
  },
  "tsup": {
    "entry": [
      "src/server.ts"
    ],
    "format": [
      "cjs"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
